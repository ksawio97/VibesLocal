<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SongDetailsButton" parent="android:Widget.ImageButton">
        <item name="android:tint">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ScrollProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressBackgroundTint">@android:color/transparent</item>
        <item name="android:progressTint">?attr/colorPrimary</item>
        <item name="android:secondaryProgressTint">#3A852F</item>
    </style>

</resources>